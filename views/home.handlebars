<div class = "container my-5">
  <h1 class = "text-center mb-4">Welcome to NewsHub</h1>
  <p class = "text-center mb-5">Your one destination for the latest headlines</p>

  <div id = "news-container" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {{#each articles as |article|}}
    <div class="col">
      <div class="card shadow-sm h-100">
        <img src="{{article.urlToImage}}" class="card-img-top" alt="article image">
        <div class="card-body">
          <h5 class="card-title">{{article.title}}</h5>
          <p class="card-text">{{article.description}}</p>
          <a href="{{article.url}}" class="btn btn-primary" target="_blank">Read More</a>
        </div>

        <div class="card-footer text-center">
          <div class="rating-box">
            <header class="mb-2">How was this article?</header>
            <div class="stars">
              <i value="{{@index}}" class="fa-solid fa-star"></i>
              <i value="{{@index}}" class="fa-solid fa-star"></i>
              <i value="{{@index}}" class="fa-solid fa-star"></i>
              <i value="{{@index}}" class="fa-solid fa-star"></i>
              <i value="{{@index}}" class="fa-solid fa-star"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
