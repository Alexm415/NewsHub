<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <h2 class="text-center mb-4">Welcome, {{userName}}!</h2>
      <h3 class="text-center mb-4">These are your top rated picks!</h3>

      {{#if dataRating}}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          {{#each dataRating}}
          <div class="col">
            <div class="card shadow-sm h-100">
              <img src="{{articleimg}}" class="card-img-top" alt="Article Image"/>
              <div class="card-body">
                <h5 class="card-title">{{articletitle}}</h5>
                <p class="card-text">{{articledescription}}</p>
                <p class="text-muted mb-3">Rating: <strong>{{starrating}} stars</strong></p>
                <a href="{{articleurl}}" class="btn btn-primary" target="_blank">Read More</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>

      {{else}}
        <p class="text-center text-muted">No top rated articles yet.</p>
      {{/if}}
    </div>
  </div>
</main>
